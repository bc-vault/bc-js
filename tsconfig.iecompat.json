{
  "compilerOptions": {
    "target": "es3",
    "outDir": "build/es5",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "downlevelIteration":true,
    "skipLibCheck": true,

    "lib": ["es6", "dom"],
    "types": [],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules","**/*.spec.ts"],
  "compileOnSave": false
}
